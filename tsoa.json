{
    "entryFile": "server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*Controller.ts"],
    "spec": {
        "outputDirectory": "dist",
        "specVersion": 3
    },
    "routes": {
        "routesDir": "dist"
    },
    "compilerOptions": {
        "paths": {
            "@modules/*": ["./modules/*"],
            "@errors/*": ["./errors/*"]
        }
    }
}
